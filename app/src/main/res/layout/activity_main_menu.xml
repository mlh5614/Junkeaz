<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="junkeaz.junkeaz.MainMenu">

    <Button
        android:id="@+id/profileButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/newPostButton"
        android:layout_below="@+id/buttonMyClaims"
        android:layout_marginTop="34dp"
        android:onClick="buttonOnClick"
        android:text="User Profile"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/newPostButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/viewListings"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:onClick="buttonOnClick"
        android:text="Create Post"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/viewListings"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_above="@+id/buttonMyPosts"
        android:layout_alignStart="@+id/buttonMyPosts"
        android:layout_marginBottom="35dp"
        android:onClick="buttonOnClick"
        android:text="View Items"
        android:theme="@style/ThemeOverlay.MyDarkButton"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/buttonMyPosts"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="buttonOnClick"
        android:layout_alignStart="@+id/buttonMyClaims"
        android:layout_centerVertical="true"
        android:text="View My Posts"
        android:theme="@style/ThemeOverlay.MyDarkButton" />

    <Button
        android:id="@+id/buttonMyClaims"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="buttonOnClick"
        android:layout_alignStart="@+id/profileButton"
        android:layout_below="@+id/buttonMyPosts"
        android:layout_marginTop="34dp"
        android:text="View My Claims"
        android:theme="@style/ThemeOverlay.MyDarkButton" />
</RelativeLayout>