<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLay1"
            android:layout_width="match_parent"
            android:layout_height="420dp"

            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imageView"
                android:layout_width="352dp"
                android:layout_height="128dp"
                android:layout_marginVertical="175dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLay2"
            android:layout_width="match_parent"
            android:layout_height="420dp"

            android:orientation="vertical"
            android:padding="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/textViewPostingUserId"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="gone"
                android:text="" />

            <TextView
                android:id="@+id/textViewClaimingUserId"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="gone"
                android:text="" />

            <TextView
                android:id="@+id/textViewClaimingUserName"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="gone"
                android:text="" />


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="PostID" />

                    <TextView
                        android:id="@+id/textViewPostId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="Title" />

                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="Posting User" />

                    <TextView
                        android:id="@+id/textViewPostingUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="Posting User Email" />

                    <TextView
                        android:id="@+id/textViewPostingUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="Description" />

                    <TextView
                        android:id="@+id/textViewDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="Street Address" />

                    <TextView
                        android:id="@+id/textViewStreetAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="Claimed?" />

                    <TextView
                        android:id="@+id/textViewClaimStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="Claiming User Email" />

                    <TextView
                        android:id="@+id/textViewClaimingUserEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold" />

                </TableRow>

            </TableLayout>

            <Button
                android:id="@+id/buttonClaimItem"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_above="@+id/newPostButton"
                android:layout_alignStart="@+id/newPostButton"
                android:layout_marginVertical="176dp"
                android:layout_marginHorizontal="70dp"
                android:onClick="buttonOnClick"
                android:visibility="gone"
                android:text="Claim This Item"
                android:theme="@style/ThemeOverlay.MyDarkButton" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>